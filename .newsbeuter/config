browser		"firefox --new-window"
# No longer using qutebrowser because of inadequate tracking protection
#browser		"qutebrowser"

external-url-viewer "urlview" 

urls-source "ocnews"
ocnews-url "https://cloud.rootkitty.tech"

ocnews-login "kitty"
ocnews-passwordeval "gpg --decrypt ~/.secrets/ocnews.pass.gpg 2>/dev/null"

notify-always yes
notify-format "newsbeuter: %n unread articles within %f unread feeds"
notify-program notify-send
notify-xterm yes
notify-screen yes

bind-key	j	down
bind-key	k	up
bind-key	u	pageup
bind-key	d	pagedown

macro y set browser "bash ~/Scripts/wyt.sh %u 480"; open-in-browser ; set browser "firefox --new-window"

